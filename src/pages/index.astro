---
// Home page - renders CRT theme
import CRTLayout from '../layouts/crt/CRTLayout.astro';
import CRTHero from '../components/crt/CRTHero.astro';
import CRTThemeToggle from '../components/crt/CRTThemeToggle.astro';
---

<CRTLayout title="Nathan Broadbent">
  <CRTHero />
</CRTLayout>
<CRTThemeToggle />

<script>
  // Check if user wants retro theme and redirect
  const THEME_KEY = 'theme-preference';
  const stored = localStorage.getItem(THEME_KEY);

  if (stored === 'dark' || stored === 'light') {
    window.location.replace('/retro');
  }
</script>
