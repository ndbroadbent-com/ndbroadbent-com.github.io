---
interface PortfolioItem {
  title: string;
  summary: string;
  image: string;
  link: string;
  date: string;
}

interface Props {
  items: PortfolioItem[];
}

const { items } = Astro.props;
---

<section id="portfolio" class="portfolio-section section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">üé® Featured Projects üé®</h2>
      <p class="section-description">
        Check out these totally rad things I've built
      </p>
    </div>

    <div class="portfolio-grid">
      {items.map((item, index) => (
        <a href={item.link} target="_blank" rel="noopener" class="project-card">
          <div class="project-image">
            <img src={item.image} alt={item.title} />
            <div class="project-overlay">
              <span class="click-here">CLICK HERE!</span>
            </div>
          </div>
          <div class="project-content">
            <h3 class="project-title">‚≠ê {item.title} ‚≠ê</h3>
            <p class="project-description">{item.summary}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .portfolio-section {
    background: transparent;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    animation: wiggle 3s ease-in-out infinite;
  }

  .section-description {
    font-size: 1.25rem;
    color: var(--cyber-blue);
    font-weight: bold;
    text-shadow: 2px 2px 0px var(--text-shadow);
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    background: repeating-linear-gradient(
      -45deg,
      rgba(0, 255, 255, 0.2),
      rgba(0, 255, 255, 0.2) 10px,
      rgba(255, 0, 255, 0.2) 10px,
      rgba(255, 0, 255, 0.2) 20px
    );
    border: 5px ridge var(--border-color);
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.5);
    transform: rotate(-1deg);
  }

  .project-card:nth-child(even) {
    transform: rotate(1deg);
  }

  .project-card:hover {
    transform: rotate(0deg) scale(1.05);
    box-shadow: 12px 12px 0px rgba(0, 0, 0, 0.5);
    z-index: 10;
  }

  .project-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-bottom: 5px groove var(--border-color);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.5) contrast(1.2);
  }

  .project-overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: repeating-linear-gradient(
      45deg,
      rgba(255, 0, 255, 0.9) 0px,
      rgba(255, 0, 255, 0.9) 20px,
      rgba(0, 255, 255, 0.9) 20px,
      rgba(0, 255, 255, 0.9) 40px
    );
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .click-here {
    color: var(--text-color);
    font-size: 2rem;
    font-weight: bold;
    text-shadow: 3px 3px 0px #000,
                 5px 5px 0px var(--text-shadow);
    animation: blink 1s infinite, wiggle 2s ease-in-out infinite;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #6641b0;
    margin-bottom: 0.75rem;
  }

  .project-description {
    font-size: 1rem;
    line-height: 1.5;
    color: #00FFFF;
    margin: 0;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2rem;
    }

    .project-card {
      transform: rotate(0deg);
    }
  }
</style>
