<style>
  .crt-hero {
    width: 100%;
  }

  .ascii-art {
    font-family: 'VT323', monospace;
    font-size: 1.2rem;
    line-height: 1.2;
    color: #33ff33;
    text-shadow:
      0 0 5px #33ff33,
      0 0 10px #33ff33;
    margin-bottom: 2rem;
    white-space: pre;
    overflow-x: auto;
  }

  .terminal-output {
    font-family: 'VT323', monospace;
  }

  .prompt {
    color: #66ff66;
    text-shadow:
      0 0 5px #66ff66,
      0 0 10px #66ff66;
    margin: 0.5rem 0;
  }

  .spacer {
    margin: 0.5rem 0;
    color: #33ff33;
  }

  .info-line {
    margin: 0.5rem 0;
    display: flex;
    gap: 1rem;
  }

  .label {
    color: #99ff99;
    min-width: 120px;
    text-shadow:
      0 0 5px #99ff99,
      0 0 10px #99ff99;
  }

  .value {
    color: #33ff33;
  }

  .bio,
  .skills,
  .contact,
  .projects {
    margin: 1rem 0;
  }

  .bio p,
  .skills p,
  .contact p,
  .projects p {
    margin: 0.3rem 0;
  }

  a {
    color: #66ff66;
    text-decoration: underline;
    text-shadow:
      0 0 5px #66ff66,
      0 0 10px #66ff66;
    transition: all 0.2s ease;
  }

  a:hover {
    color: #99ff99;
    text-shadow:
      0 0 10px #99ff99,
      0 0 20px #99ff99,
      0 0 30px #99ff99;
  }

  @keyframes blink-cursor {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }

  .cursor {
    display: inline-block;
    width: 10px;
    height: 1.2em;
    background: #33ff33;
    animation: blink-cursor 1s infinite;
    box-shadow:
      0 0 5px #33ff33,
      0 0 10px #33ff33;
  }

  @media (max-width: 768px) {
    .ascii-art {
      font-size: 0.7rem;
      margin-bottom: 1rem;
    }

    .info-line {
      flex-direction: column;
      gap: 0.25rem;
    }

    .label {
      min-width: auto;
    }
  }
</style>
