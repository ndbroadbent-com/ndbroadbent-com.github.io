---

<header class="header">
  <nav class="navbar">
    <div class="container">
      <div class="nav-content">
        <ul class="nav-links">
          <li><a href="#bio">Home</a></li>
          <li><a href="#portfolio">Portfolio</a></li>
          <li><a href="https://madebynathan.com" target="_blank" rel="noopener">Blog</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
        <div class="social-links">
          {socialLinks.map(social => (
            <a href={social.link} title={social.title} target="_blank" rel="noopener" class="social-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d={icons[social.icon as keyof typeof icons]}></path>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: linear-gradient(90deg, var(--jazz-teal), var(--jazz-purple), var(--jazz-pink), var(--jazz-yellow), var(--jazz-teal));
    background-size: 200% 100%;
    border-bottom: 5px ridge var(--border-color);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    animation: header-slide 10s linear infinite;
  }

  @keyframes header-slide {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  .navbar {
    min-height: 70px;
    width: 100%;
    display: flex;
    align-items: center;
  }

  .container {
    width: 100%;
  }

  .nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-links {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    font-size: 1.125rem;
    color: #FFFFFF;
    font-weight: bold;
    text-decoration: underline;
    transition: all 0.2s ease;
    padding: 0;
    margin: 0;
  }

  .nav-links a:hover {
    color: var(--link-hover);
    text-decoration: none;
    background: var(--text-shadow);
    padding: 2px 4px;
  }

  .social-links {
    display: flex;
    gap: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--neon-green);
    border: 3px outset var(--border-color);
    color: #000;
    transition: all 0.1s ease;
    box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.5);
  }

  .social-link:hover {
    background: var(--jazz-yellow);
    border-style: inset;
    transform: translate(2px, 2px);
    box-shadow: 1px 1px 0px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 768px) {
    .navbar {
      min-height: 60px;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-links a {
      font-size: 0.9rem;
    }

    .social-links {
      gap: 0.25rem;
    }

    .social-link {
      width: 36px;
      height: 36px;
    }
  }
</style>
