---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nathan Broadbent - Software Developer" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Nathan Broadbent" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#603cba">
    <meta name="theme-color" content="#000000">

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Privacy-friendly analytics by Plausible -->
    <script async src="https://plausible.io/js/pa-oTzvUy5XgguXkDOPcba0G.js"></script>
    <script>
      window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};
      plausible.init()
    </script>
  </head>
  <body>
    <div class="crt-container">
      <div class="monitor-frame">
        <div class="monitor-screen">
          <div class="screen-content" id="crt-screen">
            <slot />
          </div>
          <div class="scanlines"></div>
          <div class="screen-overlay"></div>
        </div>
      </div>
    </div>
  </body>
</html>

<style is:global>
  /* Local VT323 font */
  @font-face {
    font-family: 'VT323';
    src: url('/fonts/VT323-Regular.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  /* CSS Reset */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html, body {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  body {
    background: #0a0a0a;
    font-family: 'VT323', monospace;
    color: #33ff33;
  }

  .crt-container {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(ellipse at center, #1a1a1a 0%, #000000 100%);
    padding: 0.5rem;
  }

  .monitor-frame {
    position: relative;
    width: auto;
    height: calc(100vh - 1rem);
    aspect-ratio: 4 / 3;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 50%, #0a0a0a 100%);
    border-radius: 20px;
    padding: 40px;
    box-shadow:
      0 0 40px rgba(0, 0, 0, 0.9),
      inset 0 0 20px rgba(0, 0, 0, 0.5),
      inset 0 2px 4px rgba(255, 255, 255, 0.1);
  }

  .monitor-frame::before {
    content: '';
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    border-radius: 15px;
    border: 2px solid #0a0a0a;
    pointer-events: none;
  }

  .monitor-screen {
    position: relative;
    width: 100%;
    height: 100%;
    background: #000;
    border-radius: 8px;
    overflow: hidden;
    box-shadow:
      inset 0 0 40px rgba(51, 255, 51, 0.1),
      inset 0 0 80px rgba(51, 255, 51, 0.05);
  }

  .screen-content {
    position: relative;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 2rem;
    font-size: 1.5rem;
    line-height: 1.4;
    color: #33ff33;
    text-shadow:
      0 0 5px rgba(51, 255, 51, 0.5),
      0 0 10px rgba(51, 255, 51, 0.3),
      0 0 15px rgba(51, 255, 51, 0.2);
    letter-spacing: 0.05em;
    scroll-behavior: smooth;
  }

  /* Custom scrollbar */
  .screen-content::-webkit-scrollbar {
    width: 8px;
  }

  .screen-content::-webkit-scrollbar-track {
    background: #000;
  }

  .screen-content::-webkit-scrollbar-thumb {
    background: #33ff33;
    box-shadow: 0 0 5px #33ff33;
  }

  /* Scanlines effect */
  .scanlines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 1px,
      rgba(0, 0, 0, 0.15) 1px,
      rgba(0, 0, 0, 0.15) 2px
    );
    pointer-events: none;
    z-index: 2;
  }

  /* Screen overlay for CRT effect */
  .screen-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      ellipse at center,
      transparent 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    pointer-events: none;
    z-index: 1;
    border-radius: 8px;
  }

  /* Screen flicker animation */
  @keyframes flicker {
    0% { opacity: 0.98; }
    2% { opacity: 1; }
    4% { opacity: 0.98; }
    8% { opacity: 1; }
    70% { opacity: 0.99; }
    72% { opacity: 1; }
    100% { opacity: 0.98; }
  }

  .monitor-screen::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(51, 255, 51, 0.02);
    animation: flicker 5s infinite;
    pointer-events: none;
    z-index: 3;
  }

  /* Subtle edge vignette for depth */
  .monitor-screen::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      ellipse at center,
      transparent 60%,
      rgba(0, 0, 0, 0.3) 100%
    );
    pointer-events: none;
    z-index: 4;
    border-radius: 8px;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'VT323', monospace;
    color: #33ff33;
    text-shadow:
      0 0 5px rgba(51, 255, 51, 0.6),
      0 0 12px rgba(51, 255, 51, 0.4),
      0 0 20px rgba(51, 255, 51, 0.2);
    font-weight: normal;
    letter-spacing: 0.1em;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2.5rem;
    margin: 2rem 0 1rem;
  }

  h3 {
    font-size: 2rem;
    margin: 1.5rem 0 0.75rem;
  }

  a {
    color: #66ff66;
    text-decoration: underline;
    text-shadow:
      0 0 5px rgba(102, 255, 102, 0.5),
      0 0 10px rgba(102, 255, 102, 0.3);
  }

  a:hover {
    color: #99ff99;
    text-shadow:
      0 0 8px rgba(153, 255, 153, 0.6),
      0 0 15px rgba(153, 255, 153, 0.4),
      0 0 25px rgba(153, 255, 153, 0.2);
  }

  /* Blinking cursor effect */
  @keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }

  @media (max-width: 768px) {
    .crt-container {
      padding: 0.25rem;
    }

    .monitor-frame {
      width: calc(100vw - 0.5rem);
      height: calc(100vh - 0.5rem);
      aspect-ratio: unset;
      padding: 15px;
    }

    .screen-content {
      padding: 1rem;
      font-size: 1.2rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.8rem;
    }

    h3 {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  // Smooth scrolling for CRT screen
  const screen = document.getElementById('crt-screen');
  if (screen) {
    let keydownHandler;

    // Handle keyboard navigation
    keydownHandler = (e) => {
      if (e.key === 'PageDown') {
        e.preventDefault();
        screen.scrollTop += screen.clientHeight;
      } else if (e.key === 'PageUp') {
        e.preventDefault();
        screen.scrollTop -= screen.clientHeight;
      }
    };

    // Enable keyboard navigation
    screen.setAttribute('tabindex', '0');
    screen.addEventListener('keydown', keydownHandler);

    // Clean up on page unload
    window.addEventListener('beforeunload', () => {
      screen.removeEventListener('keydown', keydownHandler);
      screen.removeAttribute('tabindex');
    });
  }
</script>
