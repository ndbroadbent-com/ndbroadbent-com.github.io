<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=VT323&family=Share+Tech+Mono&display=swap');

  /* CSS Reset */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html, body {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  body {
    background: #0a0a0a;
    font-family: 'VT323', 'Share Tech Mono', 'Courier New', monospace;
    color: #33ff33;
  }

  .crt-container {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(ellipse at center, #1a1a1a 0%, #000000 100%);
    padding: 0.5rem;
  }

  .monitor-frame {
    position: relative;
    width: auto;
    height: calc(100vh - 1rem);
    aspect-ratio: 4 / 3;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 50%, #0a0a0a 100%);
    border-radius: 20px;
    padding: 40px;
    box-shadow:
      0 0 40px rgba(0, 0, 0, 0.9),
      inset 0 0 20px rgba(0, 0, 0, 0.5),
      inset 0 2px 4px rgba(255, 255, 255, 0.1);
  }

  .monitor-frame::before {
    content: '';
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    border-radius: 15px;
    border: 2px solid #0a0a0a;
    pointer-events: none;
  }

  .monitor-screen {
    position: relative;
    width: 100%;
    height: 100%;
    background: #000;
    border-radius: 8px;
    overflow: hidden;
    box-shadow:
      inset 0 0 40px rgba(51, 255, 51, 0.1),
      inset 0 0 80px rgba(51, 255, 51, 0.05);
  }

  .screen-content {
    position: relative;
    width: 100%;
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 2rem;
    font-size: 1.5rem;
    line-height: 1.4;
    color: #33ff33;
    text-shadow:
      0 0 3px #33ff33,
      0 0 6px #33ff33;
    letter-spacing: 0.05em;
    scroll-behavior: smooth;
  }

  /* Custom scrollbar */
  .screen-content::-webkit-scrollbar {
    width: 8px;
  }

  .screen-content::-webkit-scrollbar-track {
    background: #000;
  }

  .screen-content::-webkit-scrollbar-thumb {
    background: #33ff33;
    box-shadow: 0 0 5px #33ff33;
  }

  /* Scanlines effect */
  .scanlines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 1px,
      rgba(0, 0, 0, 0.3) 1px,
      rgba(0, 0, 0, 0.3) 2px
    );
    pointer-events: none;
    z-index: 2;
  }

  /* Screen overlay for CRT effect */
  .screen-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      ellipse at center,
      transparent 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    pointer-events: none;
    z-index: 1;
    border-radius: 8px;
  }

  /* Screen flicker animation */
  @keyframes flicker {
    0% { opacity: 0.98; }
    2% { opacity: 1; }
    4% { opacity: 0.98; }
    8% { opacity: 1; }
    70% { opacity: 0.99; }
    72% { opacity: 1; }
    100% { opacity: 0.98; }
  }

  .monitor-screen::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(51, 255, 51, 0.02);
    animation: flicker 5s infinite;
    pointer-events: none;
    z-index: 3;
  }

  /* Subtle edge vignette for depth */
  .monitor-screen::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      ellipse at center,
      transparent 60%,
      rgba(0, 0, 0, 0.3) 100%
    );
    pointer-events: none;
    z-index: 4;
    border-radius: 8px;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'VT323', 'Share Tech Mono', monospace;
    color: #33ff33;
    text-shadow:
      0 0 3px #33ff33,
      0 0 8px #33ff33;
    font-weight: normal;
    letter-spacing: 0.1em;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2.5rem;
    margin: 2rem 0 1rem;
  }

  h3 {
    font-size: 2rem;
    margin: 1.5rem 0 0.75rem;
  }

  a {
    color: #66ff66;
    text-decoration: underline;
    text-shadow:
      0 0 3px #66ff66,
      0 0 6px #66ff66;
  }

  a:hover {
    color: #99ff99;
    text-shadow:
      0 0 5px #99ff99,
      0 0 10px #99ff99;
  }

  /* Blinking cursor effect */
  @keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }

  .cursor::after {
    content: 'â–Š';
    animation: blink 1s infinite;
    margin-left: 2px;
  }

  @media (max-width: 768px) {
    .crt-container {
      padding: 0.5rem;
    }

    .monitor-frame {
      width: calc(100vw - 1rem);
      height: auto;
      padding: 20px;
    }

    .screen-content {
      padding: 1rem;
      font-size: 1.2rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.8rem;
    }

    h3 {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  // Line-by-line scrolling - LOCKED to discrete lines only
  const screen = document.getElementById('crt-screen');
  if (screen) {
    // Get actual line height from rendered content
    function getActualLineHeight() {
      const firstParagraph = screen.querySelector('p') || screen.querySelector('div');
      if (firstParagraph) {
        return parseFloat(getComputedStyle(firstParagraph).lineHeight);
      }
      return parseFloat(getComputedStyle(screen).lineHeight);
    }

    let lineHeight = getActualLineHeight();
    let isSnapping = false;

    // Snap to nearest line immediately
    function snapToLine() {
      if (isSnapping) return; // Prevent recursive snapping

      isSnapping = true;
      const currentScroll = screen.scrollTop;
      const snappedScroll = Math.round(currentScroll / lineHeight) * lineHeight;

      if (Math.abs(currentScroll - snappedScroll) > 0.1) {
        screen.scrollTop = snappedScroll;
      }

      // Use requestAnimationFrame to release the lock
      requestAnimationFrame(() => {
        isSnapping = false;
      });
    }

    // Mouse wheel - discrete line-by-line scrolling
    screen.addEventListener('wheel', (e) => {
      e.preventDefault();
      const delta = Math.sign(e.deltaY);
      const currentLine = Math.round(screen.scrollTop / lineHeight);
      screen.scrollTop = (currentLine + delta) * lineHeight;
    }, { passive: false });

    // Scrollbar drag - snap IMMEDIATELY to lines (no free dragging)
    screen.addEventListener('scroll', () => {
      snapToLine();
    });

    // Handle keyboard navigation
    screen.setAttribute('tabindex', '0');
    screen.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowDown') {
        e.preventDefault();
        const currentLine = Math.round(screen.scrollTop / lineHeight);
        screen.scrollTop = (currentLine + 1) * lineHeight;
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        const currentLine = Math.round(screen.scrollTop / lineHeight);
        screen.scrollTop = (currentLine - 1) * lineHeight;
      } else if (e.key === 'PageDown') {
        e.preventDefault();
        const linesPerPage = Math.floor(screen.clientHeight / lineHeight);
        const currentLine = Math.round(screen.scrollTop / lineHeight);
        screen.scrollTop = (currentLine + linesPerPage) * lineHeight;
      } else if (e.key === 'PageUp') {
        e.preventDefault();
        const linesPerPage = Math.floor(screen.clientHeight / lineHeight);
        const currentLine = Math.round(screen.scrollTop / lineHeight);
        screen.scrollTop = (currentLine - linesPerPage) * lineHeight;
      }
    });

    // Recalculate line height on resize
    window.addEventListener('resize', () => {
      lineHeight = getActualLineHeight();
      snapToLine();
    });
  }
</script>
